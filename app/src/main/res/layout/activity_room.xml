<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".local_database_practice.room_practice.Room_Activity">

    <Button
        android:id="@+id/btn_getdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Get Data"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_updateData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Update Data"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_getdata"
        app:layout_constraintStart_toStartOf="@+id/btn_getdata"
        app:layout_constraintTop_toBottomOf="@+id/btn_getdata" />

    <Button
        android:id="@+id/btnj_deleteData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Delete Data"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_updateData"
        app:layout_constraintStart_toStartOf="@+id/btn_updateData"
        app:layout_constraintTop_toBottomOf="@+id/btn_updateData" />
</androidx.constraintlayout.widget.ConstraintLayout>